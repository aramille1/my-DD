<div class="container new_form">
  <h2 class="font">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
    data: {turbo: false}) do |f| %>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } , class:"form-control"%>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } , class:"form-control" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-dark w-100 p-3 row form-group" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
