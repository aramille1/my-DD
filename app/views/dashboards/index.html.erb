<% @bookings.each do |item| %>
  <% if item.user == current_user %>
    <div class="row g-0">
    <div class="col-md-4">
      <img src="https://media.istockphoto.com/photos/portrait-of-handsome-smiling-young-man-with-crossed-arms-picture-id1200677760?k=20&m=1200677760&s=612x612&w=0&h=JCqytPoHb6bQqU9bq6gsWT2EX1G5chlW5aNK81Kh4Lg=" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
          <h5 class="card-title">Driver's name: <%= item.driving_offer.name %></h5>
          <p class="card-text">Pick Location:  <%= item.pickup_location %></p>
          <p class="card-text">Pick Time:  <%= item.pickup_time %></p>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
